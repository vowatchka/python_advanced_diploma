root = true

[*]
end_of_line = crlf
insert_final_newline = true

# Set default charset
[*.*]
charset = utf-8

# 4 space indentation
[*.{py,js,css,html,json,xml}]
indent_style = space
indent_size = 4

[Vagrantfile]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf
